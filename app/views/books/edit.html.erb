<% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %>error</li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h1>Editing Book</h1>
  <%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit %>
<% end %>


<%= link_to "Show", book_path(@book.id) %>
