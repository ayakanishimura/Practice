<h1>Books</h1>
 <% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %>error</li>
        <% end %>
      </ul>
    </div>
  <% end %>


<table>
  <% @books.each do |book| %>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
  <tbody>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book.id) %></th>
      <th><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th><%= link_to "Destroy", book_path(book.id), method: :delete %></th>
    </tr>
  </tbody>
  <% end %>
</table>

<%= render 'books/new', books:@books %>